<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/mt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 출근현황"
        android:textSize="40dp"
        android:paddingLeft="20dp"/>


    <Button
        android:text="퇴근\n버튼"
        android:textColor="#7C7C7C"
        android:textSize="20dp"
        android:id="@+id/outtime"
        android:background="@drawable/button02"
        android:layout_gravity="center_vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/intime"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:text="출근\n버튼"
        android:textColor="#7C7C7C"
        android:textSize="20dp"
        android:id="@+id/intime"
        android:background="@drawable/button01"
        android:layout_gravity="center_vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mt"
        android:layout_alignStart="@+id/outtime" />

    <TextView
        android:gravity="center"
        android:text="퇴근 정보가 없습니다."
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textColor="#C6C5C5"
        android:id="@+id/e_time"
        android:textSize="30dp"
        android:background="@drawable/time"
        android:layout_alignTop="@+id/outtime"
        android:layout_toEndOf="@+id/outtime" />

    <TextView
        android:gravity="center"
        android:text="출근 정보가 없습니다."
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textColor="#C6C5C5"
        android:background="@drawable/time"
        android:id="@+id/s_time"
        android:textSize="30dp"
        android:layout_alignTop="@+id/intime"
        android:layout_toEndOf="@+id/intime"/>


    <Button
        android:background="#00ff0000"
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="공지사항"
        android:textColor="#4C4C4C"
        android:textSize="40dp"
        android:layout_below="@+id/outtime" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:src="@drawable/staff"
        android:layout_below="@+id/board"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:text="\n 청소 깨끗하게 하렴"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/user"
        android:layout_toEndOf="@+id/outtime"
        android:id="@+id/boardText"
        android:background="@drawable/talk"
        android:gravity="center"
        android:layout_below="@+id/notice_date1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user1"
        android:src="@drawable/staff"
        android:layout_below="@+id/user"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:text="\n 청소 깨끗하게 하렴"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/boardText1"
        android:background="@drawable/talk"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/boardText" />

    <TextView
        android:id="@+id/notice_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/boardText"
        android:layout_alignTop="@+id/user"
        android:text="TextView" />

    <TextView
        android:id="@+id/notice_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boardText1"
        android:layout_alignStart="@+id/boardText"
        android:text="TextView" />


</RelativeLayout>